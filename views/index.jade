extends layout

block content
    h1= title
    p Welcome to our test result
    h2 User Info

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            textarea(id='userInfoDetails', rows="10", cols="65")

        // /USER INFO

        // USER EDIT
        h2 User Edit
            #userEdit
                table(id='tableUserEdit')
                    thead
                        th Property/Field
                        th Value
                        th Action
                        th Action
                    tbody

        // /USER EDIT

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Edit
                    th Delete
                tbody
        // /USER LIST

        // USER SEARCH
        h2 User Search
        #userSearch
            fieldset
                input#inputSearchField(type='text', placeholder='property name')
                select#inputSearchCondition()
                    option =
                    option >
                    option <

                input#inputSearchValue(type='text', placeholder='search by value')
                br
                button#btnSearchUser Search User

        // /USER SEARCH

        // ADD USER
        h2 Add User
        h6 [optional add new property/field and value]
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='email', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='number', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                select#inputUserGender()
                    option M
                    option F
                    option O
                br
                input#inputUserNewField(type='text', placeholder='new property / field name')
                input#inputUserNewFieldValue(type='text', placeholder='new property / field  value')
                br
                button#btnAddUser Add User
        // /ADD USER

    // /WRAPPER